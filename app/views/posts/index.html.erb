<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Slug</th>
    <th>Content</th>
    <th>Published</th>
    <th>Permalink path</th>
    <th>Published at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.slug %></td>
    <td><%= post.content %></td>
    <td><%= post.published %></td>
    <td><%= post.permalink_path %></td>
    <td><%= post.published_at %></td>
    <td><%= link_to 'Show', [post.user, post] %></td>
    <td><%= link_to 'Edit', edit_user_post_path(post.user, post) %></td>
    <td><%= link_to 'Destroy', [post.user, post], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_user_post_path(params[:user_id]) %>
