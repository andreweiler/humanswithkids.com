<%= form_for([@post.user, @post]) do |f| %>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%#= f.label :title %>
    <%= f.text_field :title, class: "input-block-level", placeholder: "Title" %>

    <%#= f.label :content %>
    <%= f.text_area :content, rows: "60", class: "input-block-level", placeholder: "Body" %>
  
    <%= f.label :published, class: "checkbox" do %>
      <%= f.check_box :published %> Published
    <% end %>
    
    <%= f.label :protect_slug, class: "checkbox" do %>
      <%= f.check_box :protect_slug %> Protect url slug from updates
    <% end %>
    
  
  <div class="form-actions">
    <%= f.submit class: "btn" %>
  </div>
<% end %>

<p><b>Tip:</b> when changing the published_at date so the url is correct for old Posts, change it from heroku console.</p>
<p><em>Post.last.update_attribute(:published_at, '2011-05-15 00:00:00')</em></p>
