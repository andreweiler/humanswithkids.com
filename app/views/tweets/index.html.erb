<h1>Scheduled Tweets</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Body</th>
      <th>Sent</th>
      <th>Scheduled</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.authentication.name %></td>
        <td><%= tweet.body %></td>
        <td><%= tweet.sent %></td>
        <td><%= tweet.send_at_english %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path, class: "btn btn-success" %>
<%= link_to 'Add Account', "/auth/twitter", class: "btn btn-primary" %>
