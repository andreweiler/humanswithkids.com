<h1>Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Name</th>
      <th>Email</th>
      <th>Street</th>
      <th>Zip</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>

