  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.product_id, product_path(order.product_id) %></td>
        <td><%= order.name %></td>
        <td><%= order.email %></td>
        <td><%= order.street %></td>
        <td><%= order.zip %></td>
        <td><%= order.city %></td>
        <td><%= order.state %></td>
        <td><%= order.country %></td>

