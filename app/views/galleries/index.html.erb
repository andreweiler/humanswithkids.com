<div class="row">
  <h1 style="text-align: center;">Image Galleries</h1>

  <div class="col-md-6 col-md-offset-3">
    
    <table class="table table-bordered">

      <% @galleries.each do |gallery| %>

          <tr class="list-group-item-2">

            <td><%= link_to gallery.name, gallery %></td>
            <td>
              <a href="<%= edit_gallery_path(:id => gallery.id) %>" class="btn btn-primary">
                <i class="glyphicon glyphicon-edit "></i>
                Edit
              </a>

              <a class="btn btn-danger" confirm="Do you really want to delete this fella?" data-method="delete" href="<%= gallery_path(:id => gallery.id) %>" data-remote=true>
                <i class="glyphicon glyphicon-trash"></i>
                Delete
              </a>
            </td>

          </tr> <!-- -->

      <% end %>

    </table> <!--  -->

    <%= link_to 'New Gallery', new_gallery_path, :class => 'btn' %>

  </div> <!-- col-md-6 -->

</div> <!-- row -->
