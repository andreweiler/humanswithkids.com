<div class="row">
  <div class="col-md-12">
    <h2><%= @gallery.name %> Images</h2>

    <input type="hidden" id="galleryID" value="<%= @gallery.id %>">

    <p>
      <b>Description: </b>
      <%= @gallery.description %>
    </p>

    <hr>
  </div>
</div>

<%= form_for [@gallery, @picture], :html => { :multipart => true, :id => "fileupload"  } do |f| %>

  <div class="row">
    <div class="col-md-12">
      <div class="fileupload-buttonbar">
        <div class="progressbar fileupload-progressbar nofade"><div style="width:0%;"></div></div>

        <span class="btn btn-primary fileinput-button">
          <i class="glyphicon glyphicon-plus"></i>
          <span><%= t('photos.add_files') %>...</span>
          <%= f.file_field :image, :multiple => true %>
        </span>
      </div>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-md-12">
      <div class="thumbnails files">

        <% unless @pictures.empty? %>
          <% @pictures.each do |pic| %>
              <div class="col-md-4">
              <!-- <li class="thumbnail" id="picture_<%= pic.id %>"> -->
                <div class="thumbnail" id="picture_<%= pic.id %>">
                  <a href="<%= pic.image.url %>" rel="lightbox-pictures" title="<%= pic.description %>">
                    <img src="<%= pic.image.preview.url %>" alt="">
                  </a>
                  <div class="caption">

                    <div class="image-url">
                      <b>Feature (For Images in Posts, Featured images..)</b>
                      <br>
                      <%= text_field_tag("image-url", pic.image.preview.url, class: "input-medium", onclick: "this.focus(); this.select();") %>
                      <br>
                      <b>Large (used for Hero images)</b>
                      <br>
                      <%= text_field_tag("image-url", pic.image.large.url, class: "input-medium", onclick: "this.focus(); this.select();") %>
                      <br>
                    </div>

                    <div class="form-group">
                      <%= link_to edit_gallery_picture_path(@gallery, pic), class: "btn btn-warning btn-sm" do %>
                        <i class="glyphicon glyphicon-edit"></i>
                        Edit
                      <% end %>

                      <%= link_to gallery_picture_path(@gallery, pic), class: "btn btn-danger btn-sm", data: { confirm: "Delete me? Nooo!", method: "delete", remote: true } do %>
                        <i class="glyphicon glyphicon-trash"></i>
                        Delete
                      <% end %>
                    </div>

                  </div>

                </div>
              </div> <!-- col-md- -->
          <% end %>
        <% end %>

      </div> <!-- .thumbnails .files -->
    </div> <!-- col-md-12 -->
  </div>
<% end %>


<div class="row">
  <div class="col-md-12">
    <div class="form-actions">
      <%#= link_to 'Back', galleries_path, :class => 'btn btn-warning'  %>
      <%= link_to 'Edit Gallery', edit_gallery_path(@gallery), :class => 'btn btn-warning' %>
      <%= link_to 'Delete This Gallery', gallery_path(@gallery), :method => 'delete', :data => { confirm: 'Are you sure? The WHOLE Gallery?'}, :class => 'btn btn-danger' %>
    </div>
  </div>
</div>
