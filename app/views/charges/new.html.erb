<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>

  <%= hidden_field(:product, :id, :value => params[:product_id]) %>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-image="https://humanswithkids-assets.s3.amazonaws.com/uploads/picture/image/5/square_ST-4_-_Blue_-_Large_1024.jpg"
          data-name="Humans With Kids"
          <%# data-panel-label="Pay {{amount}}" %>
          data-label="Buy it!"
          data-description="Strider ST-4 (Pink)"
          data-shipping-address=true
          data-amount="500">
  </script>
<% end %>