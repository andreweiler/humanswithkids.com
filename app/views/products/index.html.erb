<div class="row products-listing">
  
  <% @products.in_groups_of(3) do |products| %>
    
    <div class="row">
      
      <% products.each do |product| %>
        <% if product %>
          <div class="col-md-4 product-listing">
            <%= link_to product, class: "product-link" do %>
              <div class="product-feature-image" style="background-image: url('<%= product.image_url_string %>');"></div>
              <%#= image_tag product.image_url_string, class: "img-responsive" %>
              <div class="caption">
                <h4><%= product.name %> - <%= product.features %> <strong class="pull-right"><%= number_to_currency (product.price_in_cents/100) %></strong></h4>
              </div>
            <% end %>
          </div>
        <% end %>

      <% end %>

    </div>

  <% end %>
  
</div>